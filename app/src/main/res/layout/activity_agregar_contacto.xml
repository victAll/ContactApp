<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.allende.victor.contactapp.AgregarContacto">

    <Button
        android:text="Agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAgregar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/etNombre"
        android:hint="Nombre"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etDireccion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etTelefono"
        android:hint="Teléfono"
        android:layout_below="@+id/etNombre"
        android:layout_alignStart="@+id/etNombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etDireccion"
        android:hint="Dirección"
        tools:inputType="text"
        android:layout_below="@+id/etTelefono"
        android:layout_alignStart="@+id/etEmail"
        android:layout_marginTop="12dp" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etEmail"
        android:hint="Email:"
        android:layout_below="@+id/etDireccion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_above="@+id/btnAgregar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/ibtCamara" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="180dp"
        app:srcCompat="@android:drawable/star_big_on"
        android:id="@+id/ivImagen"
        android:layout_above="@+id/ibtCamara"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
